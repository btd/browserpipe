extends ../layouts/index

block body
  h1= title

  .row
    .offset1.span5
      a(href="/auth/facebook")
        img(src="/img/facebook_64.png")
      a(href="/auth/twitter")
        img(src="/img/twitter_64.png")
      a(href="/auth/google")
        img(src="/img/google_64.png")
    .span6
      if (typeof errors !== 'undefined')
        .fade.in.alert.alert-block.alert-error
          a.close(data-dismiss="alert", href="javascript:void(0)") x
          ul
            each error in errors
              li= error.type

      block auth
