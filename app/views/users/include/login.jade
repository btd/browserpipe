extends auth

block auth
    form#login(action="/authenticate", method="post")
        .control-group
            .controls
                input#email(type='text', name="email", placeholder='Email')

        .control-group
            .controls
                input#password(type='password', name="password", placeholder='Password')

        .control-group
            .controls
                button.btn.btn-warning.btn-big(type='submit') Login               
