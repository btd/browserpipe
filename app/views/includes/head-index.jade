head()
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  title= appName+' - '+title
  meta(name="description", content="A site to store bookmarks")
  meta(name='viewport', content='width=device-width,initial-scale=1')
  meta(http-equiv='Content-type', content='text/html;charset=UTF-8')
  meta(name="keywords", content="everbookmark, bookmark, url, link")

  link(href='/favicon.ico', rel='shortcut icon', type='image/x-icon')
  
  //Opengraph tags  
  meta(property='og:title', content='#{appName} - #{title}')
  meta(property='og:description', content='A site to store bookmarks"')
  meta(property='og:type', content='website')
  meta(property='og:url', content='http://everbookmark.com')
  meta(property='og:image', content='http://everbookmark.com/img/main-logo.png')
  meta(property='og:site_name', content='Everbookmark: bookmarks for ever')

  //Application styles
  link(rel='stylesheet', href='/css/bootstrap.css')
  link(rel='stylesheet', href='/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/css/base.css')
  link(rel='stylesheet', href='/css/index.css')

  //Application scripts
  script(src='/js/libs/jquery/jquery-1.8.0.min.js')  
  script(src='/js/libs/bootstrap/bootstrap.min.js')  
   
  //HTML5 shim, for IE6-8 support of HTML5 elements
  //if lt IE 9
    script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')  
  script(src='/js/libs/modernizr/modernizr-2.6.1-respond-1.1.0.min.js')