{
    "manifest_version": 2,

    "name": "Listboard.it",
    "description": "This extension is to sync tabs with Listboard.it.",
    "version": "1.0.3",

    "permissions": [
        "tabs",
        "storage",
        "contextMenus",
        "*://*.listboard.it/*"
    ],

    "background": {
        "scripts": ["sync.js"]
    },

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "browser_action": {
        "default_icon": "icon48.png",
        "default_title": "Sync with Listboard.It"
    },

    "web_accessible_resources": [
        "manifest.json"
    ],

    "content_scripts": [
        {
            "matches": ["*://*.listboard.it/*"],
            "js": ["message/message.js"],
            "run_at": "document_end"
        }
    ]
}