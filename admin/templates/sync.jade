.well
  .page-header: h1 Sync pending items for users

  .row-fluid
    .span12
      table#datagrid.table.table-striped.table-bordered.table-condensed(cellpadding="0", cellspacing="0", border="0")
        thead
          tr
            th Email
            th Items Count
            th No screneshot
            th No favicon
            th Actions
        tbody
          each user in users
            tr(id="#{user._id}-row")
              td(id="#{user._id}-email") #{user.email}
              td(id="#{user._id}-item-count") #{itemCount}
              td(id="#{user._id}-noscreenshot-count") #{noScreenshotCount}
              td(id="#{user._id}-nofavicon-count") #{noFaviconCount}
              td(id="#{user._id}-actions")
                a(id="#{user._id}-sync", href="#/sync_favicon/#{user._id}", title="Sync Favicon")
                  i.icon-edit.icon-white
                a(id="#{user._id}-sync", href="#/sync_screenshot/#{user._id}", title="Sync Screenshot")
                  i.icon-edit.icon-white
