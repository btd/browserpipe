.well
  .page-header: h1 Sync user items

  .row-fluid
    .span12
      table#datagrid.table.table-striped.table-bordered.table-condensed(cellpadding="0", cellspacing="0", border="0")
        thead
          tr
            th User Id
            th Items Count
            th No screenshot
            th No favicon
            th Actions
        tbody
          each result in results
            tr(id="#{result._id}-row")
              td(id="#{result._id}-result") #{result._id}
              td(id="#{result._id}-item-count") #{result.itemCount}
              td(id="#{result._id}-noscreenshot-count") #{result.noScreenshotCount}
              td(id="#{result._id}-nofavicon-count") #{result.noFaviconCount}
              td(id="#{result._id}-actions")
                a(id="#{result._id}-sync", href="#/sync_favicon/#{result._id}", title="Sync Favicon")
                  i.icon-globe.icon-white
                a(id="#{result._id}-sync", href="#/sync_screenshot/#{result._id}", title="Sync Screenshot")
                  i.icon-screenshot.icon-white
